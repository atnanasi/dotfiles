#################################
#.i3rc - startup settings for i3#
# atnanasi/dotfiles             #
#################################

# start ssh-agent
eval $(ssh-agent)

# for polkit authications
lxpolkit &

# set mouse cursor
xsetroot -cursor_name left_ptr &

# start keyboard shortcuts manager
xbindkeys &

# start applet for NetworkManager
nm-applet &

# start applet for volume change and keyboard shortcuts
volumeicon &

# start wallpaper manager
nitrogen --restore &

###HOSTCONF###
