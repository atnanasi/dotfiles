#!/bin/sh

# VcXsrv should use 0
export DISPLAY=:0
export LIBGL_ALWAYS_INDIRECT=1

# Start dbus
#sudo mkdir -p /run/dbus
export $(dbus-launch)

# Uim Settings
export GTK_IM_MODULE='uim'
export QT_IM_MODULE='uim'
uim-xim &
export XMODIFIERS='@im=uim'

uim-toolbar-gtk &

# Loading ~/.Xresources
xrdb ~/.Xresources

# Loop
while :; do sleep 1; done
